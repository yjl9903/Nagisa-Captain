{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "lib": [
      "ESNext",
      "DOM"
    ],
    "module": "ESNext",
    "moduleResolution": "Node",
    "paths": {
      "@animepaste/bangumi": [
        "../bangumi/types.d.ts"
      ],
      "@animepaste/bangumi/*": [
        "../bangumi/dist/*"
      ],
      "@animepaste/bangumi/client": [
        "../bangumi/client.d.ts"
      ],
      "~/*": [
        "./src/*"
      ]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ESNext",
    "types": [
      "vite/client"
    ],
    "useDefineForClassFields": true
  },
  "exclude": [
    "**/dist/**"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}